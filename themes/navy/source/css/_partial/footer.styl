#footer
  clearfix()
  padding: 40px 0
  color: rgba(255, 255, 255, 0.6)
  font-family: font-title
  a
    color: inherit
    text-decoration: none
    transition: 0.2s
    &:hover
      color: #fff

#footer-copyright
  line-height: 1.4
  float: left
  a
    font-weight: bold

#footer-links
  float: right

.footer-link
  font-size: 30px
  margin-left: 20px
  float: left