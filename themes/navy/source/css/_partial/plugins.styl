#plugin-list-header
  clearfix()
  padding: 40px 0
  text-align: center
  vertical-align: middle

#plugin-list-title
  font-family: font-title
  font-size: 36px
  font-weight: 300
  line-height: 1
  float: left

#plugin-list-count
  float: right
  color: color-gray
  line-height: 40px
  margin-right: 15px

#plugin-search-input
  font-size: 16px
  font-family: inherit
  -webkit-appearance: none
  border: 1px solid color-border
  padding: 10px 10px
  width: 50%
  float: right

#plugin-list
  clearfix()
  padding: 40px 0
  margin: 0 -20px

.plugin
  display: none
  padding: 20px
  width: 50%
  float: left
  &.on
    display: block

.plugin-name
  font-family: font-title
  font-weight: bold
  color: color-link
  font-size: 20px
  text-decoration: none
  line-height: 1
  &:hover
    color: color-link-hover

.plugin-desc
  line-height: line-height
  margin: 1em 0

.plugin-tag-list
  clearfix()

.plugin-tag
  color: color-gray
  font-size: 0.9em
  text-decoration: none
  float: left
  margin-right: 10px
  &:hover
    color: color-link-hover
  &:before
    content: "#"

#plugin-tag-cloud
  clearfix()
  word-break: break-all
  line-height: 1.3
  a
    text-decoration: none
    color: color-gray
    margin-right: 10px
    &:hover
      color: color-link-hover
    &:before
      content: "#"